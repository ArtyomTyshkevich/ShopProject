@model Product

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-5 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control mt-2">
        </div>
        <div class="mb-3">
            <label asp-for="Brand"></label>
            <input asp-for="Brand" disabled class="form-control mt-2">
        </div>
        <div class="mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled class="form-control mt-2">
        </div>
        <div class="mb-3">
            <label asp-for="ImageFileName"></label> <br/>
            <img src="/productImage/@Model.ImageFileName" width="200">
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>
